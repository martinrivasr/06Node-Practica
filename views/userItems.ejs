    <%- include ('header.ejs') %>
    <!-- Main content for user's products -->
    <div class="main-layout">
        <div class="content">
            <!-- Product Card Example -->
            <div class="product">
                <img src="product-image.jpg" alt="Foto del producto" class="product-image">
                <div class="product-details">
                    <h3 class="product-name">Nombre del producto</h3>
                    <p class="product-owner">Propietario: Usuario123</p>
                    <p class="product-price">Precio: $100</p>
                    <div class="product-tags">
                        <span class="tag">work</span>
                        <span class="tag">lifestyle</span>
                    </div>
                    <div class="product-actions">
                        <button class="buy-btn">Comprar</button>
                        <button class="delete-btn">Borrar</button>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <div class="pagination">
                <div>
                    <label for="records-per-page">Registros por página:</label>
                    <select id="records-per-page">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                    </select>
                </div>
                <div class="page-controls">
                    <button class="page-btn">« Anterior</button>
                    <span class="page-info">Página 1 de 5</span>
                    <button class="page-btn">Siguiente »</button>
                </div>
            </div>
        </div>
    </div>
    <%- include ('footer.ejs') %>